{
  "name": "Tab Saver",
  "version": "1.0",
  "description": "Saves and loads the URLs of all chrome tabs in current window",
  "permissions": [
    "tabs",
    "activeTab",  
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://stackpath.bootstrapcdn.com/; object-src 'self'",
  "manifest_version": 2
}
